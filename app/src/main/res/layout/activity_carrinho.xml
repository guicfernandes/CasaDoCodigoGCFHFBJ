<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView

        android:id="@+id/lista_itens_carrinho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp" >
    </android.support.v7.widget.RecyclerView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/texto_valor_compra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Valor total da compra :"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="bottom"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/valor_carrinho"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="R$ 99,8"
            android:textAlignment="center"
            android:layout_toEndOf="@id/texto_valor_compra"
            android:layout_toRightOf="@id/texto_valor_compra"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>



